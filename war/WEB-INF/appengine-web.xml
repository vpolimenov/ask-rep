<?xml version="1.0" encoding="utf-8"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
  <application>future-spot-815</application>
  <version>2</version>

  <!--
    Allows App Engine to send multiple requests to one instance in parallel:
  -->
  <threadsafe>true</threadsafe>
  
  <!-- Configure serving/caching of GWT files -->
  <static-files>
    <include path="**" />

    <!-- The following line requires App Engine 1.3.2 SDK -->
    <include path="**.nocache.*" expiration="0s" />

    <include path="**.cache.*" expiration="365d" />
    <exclude path="**.gwt.rpc" />
  </static-files>

  <!-- Configure java.util.logging -->
  <system-properties>
    <property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
     
	<property name="db" value="ask_rep" />
	<!-- Cloud IP: instance 173.194.106.27 -->
	<property name="instance" value="173.194.106.27" />
	<property name="username" value="root" />
	<!-- Localhost: root, Live: qwerty18 -->
	<property name="password" value="qwerty18" />
	
  </system-properties>

  <sessions-enabled>true</sessions-enabled>
  <async-session-persistence enabled="true" />
  <use-google-connector-j>true</use-google-connector-j>

</appengine-web-app>
